# ============================================
# CONFIGURAÇÕES DO PROJETO
# ============================================

# Chave de Criptografia (OBRIGATÓRIO)
N8N_ENCRYPTION_KEY=sua_chave_aleatoria_longa_aqui

# Telegram Bot Token (OBRIGATÓRIO)
TELEGRAM_BOT_TOKEN=seu_token_do_bot_telegram_aqui

# OpenWeather API Key (OBRIGATÓRIO)
OPENWEATHER_API_KEY=sua_chave_api_openweather_aqui

# Telegram User ID (OPCIONAL)
MY_TELEGRAM_ID=000000

# ============================================
# CONFIGURAÇÕES GLOBAIS DO N8N
# ============================================

# Configurações de Host e Porta
N8N_HOST=localhost
N8N_PORT=5678
WEBHOOK_URL=http://localhost:5678/

# Configurações de Timezone
GENERIC_TIMEZONE=America/Sao_Paulo
TZ=America/Sao_Paulo

# Configurações de Node Functions
NODE_FUNCTION_ALLOW_EXTERNAL=*
NODE_FUNCTION_ALLOW_BUILTIN=*
N8N_BLOCK_ENV_ACCESS_IN_NODE=false

# Configurações de Execução
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_MAX_AGE=336

# Configurações de Segurança (Autenticação Básica)
N8N_BASIC_AUTH_ACTIVE=false